# Environment Configuration for Dual Email Indexing

# VectorDB Service Configuration
VECTORDB_ENDPOINT=http://localhost:8001
VECTORDB_PATH=./vector_store

# Dual Indexing Features
ENABLE_VECTORDB=true
ENABLE_ELASTICSEARCH=true
TRANSACTION_SAFETY=true

# Performance Settings
INDEXING_BATCH_SIZE=20
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# Existing Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200

# Discord Notifications (if enabled)
DISCORD_BOT_TOKEN=your_token_here
DISCORD_CHANNEL_ID=1234567890123456789
DISCORD_APP_URL=http://localhost:3000

# Slack Notifications (if enabled) 
SLACK_API_TOKEN=xoxb-your-token-here

# Webhook Notifications (if enabled)
WEBHOOK_URL=https://your-webhook-url.com

# Python Service Settings
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8001
UVICORN_WORKERS=4
UVICORN_LOG_LEVEL=info